! Rose Pine Colourscheme
! Special
*.foreground:   #e0def4
!*.background:   #232136 ! rose pine moon background
!.background: #191724 ! rose pine main background
*.background: #000000

! Normal colors
*.color0:  #393552
*.color1:  #eb6f92
*.color2:  #3e8fb0
*.color3:  #f6c177
*.color4:  #9ccfd8
*.color5:  #c4a7e7
*.color6:  #ea9a97
*.color7:  #e0def4

! Bright colors
*.color8:  #6e6a86
*.color9:  #eb6f92
*.color10: #3e8fb0
*.color11: #f6c177
*.color12: #9ccfd8
*.color13: #c4a7e7
*.color14: #ea9a97
*.color15: #e0def4

!Cursor
XTerm*cursorColor: #e0def4


! ---------- Font ----------
XTerm*faceName: JetBrainsMono Nerd Font Mono
XTerm*faceSize: 16

! ---------- Mouse / Scrollback ----------
XTerm*scrollBar: false
XTerm*saveLines: 10000
XTerm*selectToClipboard: true

! ---------- Bell ----------
XTerm*bellIsUrgent: false
XTerm*visualBell: false

XTerm*metaSendsEscape: true
XTerm*eightBitInput: false
XTerm*eightBitMeta: false


! ----------zsh ------------
XTerm*shell: /bin/zsh
